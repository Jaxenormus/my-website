---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { ImagePopover } from "./ImagePopover";

interface Props {
  image: ImageMetadata;
  siteImage: ImageMetadata;
  company: string;
  position: string;
  start: string;
  end: string;
}

const { company, position, start, end, image, siteImage } = Astro.props;
---

<ImagePopover image={siteImage} client:load>
  <div class="flex flex-row items-center gap-4 w-full">
    <Image
      src={image}
      alt={company}
      class="hidden min-[400px]:block w-10 h-10 bg-zinc-400 rounded-full"
    />
    <div class="space-y-1 w-full">
      <div class="flex flex-row justify-between items-start">
        <h3>{company}</h3>
        <span class="text-sm text-zinc-400">{start} - {end}</span>
      </div>
      <p class="text-sm text-zinc-400">
        <span>{position}</span>
      </p>
    </div>
  </div>
</ImagePopover>
