---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  company: string;
  position: string;
  start: string;
  end: string;
}

const { company, position, start, end, image } = Astro.props;
---

<div class="flex flex-row items-center gap-4 w-full">
  <Image
    src={image}
    alt={company}
    class="hidden min-[400px]:block w-10 h-10 bg-zinc-400 rounded-full object-cover object-center"
    loading="eager"
  />
  <div class="space-y-1 w-full">
    <h3>{company}</h3>
    <p class="flex flex-row justify-between items-start text-sm text-zinc-400">
      <span>{position}</span>
      <span>{start} - {end}</span>
    </p>
  </div>
</div>
